---
name: Form Groups
description: TKTK
order: 2
links:
    Input groups demo: /demos/forms/groups.html
---

<form class="mzp-c-form">
  <fieldset class="mzp-c-form-set">
    <legend class="mzp-c-form-heading">Single column full width</legend>
    <div class="mzp-c-form-group mzp-l-form-group-full">
      {{#embed "patterns.molecules.forms.fields.input" id="fw1" type="text"}}{{/embed}}
    </div>
  </fieldset>

  <div class="mzp-c-form-heading">Half</div>
  <div class="mzp-c-form-group mzp-l-form-group-half">
    {{#embed "patterns.molecules.forms.fields.input" id="fp1" type="text"}}{{/embed}}
    {{#embed "patterns.molecules.forms.fields.input" id="fp2" type="text"}}{{/embed}}
  </div>

  <fieldset class="mzp-c-form-set">
    <legend class="mzp-c-form-heading">Third</legend>
    <div class="mzp-c-form-group mzp-l-form-group-third">
      {{#embed "patterns.molecules.forms.fields.input" id="ft4" type="text" msg="msg"}}{{/embed}}
      {{#embed "patterns.molecules.forms.fields.input" id="ft5" type="text" msg="msg"}}{{/embed}}
      {{#embed "patterns.molecules.forms.fields.select" id="ft6" msg="msg"}}{{/embed}}
    </div>
  </fieldset>

  <fieldset class="mzp-c-form-set">
    <legend class="mzp-c-form-heading">Quarter</legend>
    <div class="mzp-c-form-group mzp-l-form-group-quarter">
      {{#embed "patterns.molecules.forms.fields.input" id="q5" type="text"}}{{/embed}}
      {{#embed "patterns.molecules.forms.fields.input" id="q6" type="text"}}{{/embed}}
      {{#embed "patterns.molecules.forms.fields.input" id="q7" type="text"}}{{/embed}}
      {{#embed "patterns.molecules.forms.fields.input" id="q8" type="text"}}{{/embed}}
    </div>
  </fieldset>

  <div class="mzp-c-form-group mzp-l-form-group-datetime">
    {{#embed "patterns.molecules.forms.fields.input" id="dt1" type="date"}}{{#content "label"}}Date{{/content}}{{/embed}}
    {{#embed "patterns.molecules.forms.fields.input" id="dt2" type="time"}}{{#content "label"}}Time{{/content}}{{/embed}}
  </div>

  <fieldset class="mzp-c-form-set">
    <legend class="mzp-c-form-heading">Special groups</legend>
    <div class="mzp-c-form-group mzp-l-form-group-datetime">
      {{#embed "patterns.molecules.forms.fields.input" id="dt1" type="date"}}{{#content "label"}}Date{{/content}}{{/embed}}
      {{#embed "patterns.molecules.forms.fields.input" id="dt2" type="time"}}{{#content "label"}}Time{{/content}}{{/embed}}
    </div>

    <fieldset class="mzp-c-form-set">
      <legend class="mzp-c-form-label">Expiry</legend>
      <div class="mzp-c-form-group mzp-l-form-group-expiry">
        {{#embed "patterns.molecules.forms.fields.input" id="f7" type="text"}}
          {{#content "label"}}
            Month
          {{/content}}
          {{#content "attrs"}}
            maxlength="2" size="2"
          {{/content}}
        {{/embed}}
        <div class="mzp-c-form-group-spacer">/</div>
        {{#embed "patterns.molecules.forms.fields.input" id="f8" type="text"}}
          {{#content "label"}}
            Year
          {{/content}}
          {{#content "attrs"}}
            maxlength="2" size="2"
          {{/content}}
        {{/embed}}
      </div>
    </fieldset>
  </fieldset>

  <fieldset class="mzp-c-form-set">
    <legend class="mzp-c-form-heading">Row</legend>
    <div class="mzp-c-form-row">
      {{#embed "patterns.molecules.forms.fields.input" id="br1" type="text" msg="msg"}}{{#content "attrs"}}maxlength="10" size="10"{{/content}}{{/embed}}
      {{#embed "patterns.molecules.forms.fields.textarea" id="br2" msg="msg"}}{{#content "attrs"}}cols="10"{{/content}}{{/embed}}
      {{#embed "patterns.molecules.forms.fields.select" id="br3" type="text" msg="msg"}}{{/embed}}
      {{#embed "patterns.molecules.forms.fields.choice" id="br4" type="checkbox" is-legal="true" msg="You must agree to our privacy notice to continue."}}{{#content "label"}}Iâ€™m okay with Mozilla handling my info as explained in <a href="/en-US/privacy/websites/">this Privacy Notice</a>{{/content}}{{/embed}}
    </div>
    <div class="mzp-c-form-msg">msg</div>
  </fieldset>

  <fieldset class="mzp-c-form-set">
    <legend class="mzp-c-form-heading">row</legend>
    <div class="mzp-c-form-row">
      {{#embed "patterns.molecules.forms.fields.input" id="br1" type="text" msg="msg"}}
        {{#content "label"}}Card Number{{/content}}
        {{#content "attrs"}}maxlength="19" size="19"{{/content}}
      {{/embed}}
      <fieldset class="mzp-c-form-set">
        <legend class="mzp-c-form-label">Expiry</legend>
        <div class="mzp-c-form-group mzp-l-form-group-expiry">
          {{#embed "patterns.molecules.forms.fields.input" id="f7" type="text" msg="Please enter two digits for the month."}}
            {{#content "label"}}
              Month
            {{/content}}
            {{#content "attrs"}}
              maxlength="2" size="2"
            {{/content}}
          {{/embed}}
          <div class="mzp-c-form-group-spacer">/</div>
          {{#embed "patterns.molecules.forms.fields.input" id="f8" type="text" msg="msg"}}
            {{#content "label"}}
              Year
            {{/content}}
            {{#content "attrs"}}
              maxlength="2" size="2"
            {{/content}}
          {{/embed}}
        </div>
      </fieldset>
      {{#embed "patterns.molecules.forms.fields.input" id="br1" type="text"}}
        {{#content "label"}}CCV{{/content}}
        {{#content "attrs"}}maxlength="3" size="3"{{/content}}
      {{/embed}}
      {{#embed "patterns.molecules.forms.fields.input" id="br1" type="text"}}
        {{#content "label"}}Zip Code{{/content}}
        {{#content "attrs"}}maxlength="5" size="5"{{/content}}
      {{/embed}}
    </div>
  </fieldset>
</form>
